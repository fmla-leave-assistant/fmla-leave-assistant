<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../layout/head') %>
</head>

<body>
  <nav>
    <%- include('../layout/navbar') %>
  </nav>

<% const getDateFromJd = (jd) => new Date(new Date(new Date().getFullYear(), 0, 0).getTime() + ((jd + 1)/365 * 525600 * 60000)) %>

  <div id="hoursForm">
    <form action="/submitUserHours" method="post" id="hoursForm">
      <% pageData.days.forEach(day => { %>
      <div class="dayclass width100">
      <div class="width100"><%= day.dayOfWeek %></div>
      <div class="date"><%= getDateFromJd(day.dayOfYear) %></div>
      <input type="text" name="hours" placeholder="0" class="hourinput">
      <input type="hidden" name="daynumber" value="<%- day.dayOfYear %>">
      <input type="hidden" name="badge" value="<%- day.badgeNumber %>">
      <% }); %>
      
    </div>
      <button class="hourSubmitButton"type="submit"><%= pageData.text %></button>
    </form>
  </div>

  <footer>
      <%- include('../layout/footer') %>
  </footer>

