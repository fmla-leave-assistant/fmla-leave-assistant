  <div class="container-user-form">
    <div class="wrap-user-form">
      <form action="/login" method="post" id="logform" class="input-form validate-form">
        <input type="hidden" name="currentDay" value="replacewithdayofyear" id="replacewithdayofyear">
        <input type="hidden" name="dayOfWeek" value="<%- new Date().getDay() %>">
        <span class="input-form-title">
          FMLA Leave Planner
        </span>
        <div class="wrap-input validate-input" data-validate="Badge # is required">
          <span class="label-input">Badge #</span>
          <input class="input" type="text" name="badgeNumber" placeholder="Enter your Badge #">
          <span class="focus-input"></span>
        </div>
        <div class="wrap-input validate-input" data-validate="">
          <span class="label-input">Password</span>
          <input class="input" type="password" name="password" placeholder="Enter your password">
          <span class="focus-input"></span>
        </div>
        <div class="wrap-input input-select">
          <span class="label-input">Preferred Language</span>
          <div>
            <p><select class="selection-2" name="language">
                <% languagesArray.forEach(language => { %>
                <option name="language" value="<%- language.language %>">
                  <%= language.name %>
                  <% }); %>
              </select></p>
          </div>
          <span class="focus-input"></span>
        </div>
        <div class="container-user-form-form-btn">
          <div class="wrap-user-form-form-btn">
            <div class="input-form-bgbtn"></div>
            <button type="submit" class="input-form-btn">
              <span id="important">
                Submit
              </span>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
