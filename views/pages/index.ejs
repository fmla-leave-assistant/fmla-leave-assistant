<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="/styles/reset.css">
    <link rel="stylesheet" type="text/css" href="/styles/base.css">
    <link rel="stylesheet" type="text/css" href="/styles/modules.css">
    <link rel="stylesheet" type="text/css" href="/styles/layouts.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/css/select2.min.css" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css?family=Josefin+Sans|Mukta|Nanum+Gothic|Varela+Round&display=swap" rel="stylesheet">
  <%- include('../layout/head') %>

</head>

<body>
  <% const dayFinder = () => Math.floor((((new Date()) - (new Date(new Date().getFullYear(), 0, 0))) / 525600 / 60000) * 365) %>
  <input type="hidden" name="currentDay" value="<%- dayFinder() %>" id="replacewithdayofyear">
  <nav>
    <%- include('../layout/navbar') %>
  </nav>

  <div class="container-user-form">
    <div class="wrap-user-form">
      <div id="img-container">
          <a href="/">
            <img class="icon" id="logo" src="/styles/images/JALA-logo.png">
          </a>
        </div>
      <form action="/login" method="post" id="logform" class="input-form validate-form">
        <input type="hidden" name="currentDay" value="<%- dayFinder() %>" id="replacewithdayofyear">
        <input type="hidden" name="dayOfWeek" value="<%- new Date().getDay() %>">
        <span class="input-form-title">
          FMLA Leave Planner
        </span>
        <div class="wrap-input validate-input" data-validate="Badge # is required">
          <span class="label-input">Badge #</span>
          <input class="input" type="text" name="badgeNumber" placeholder="Enter your Badge #">
          <span class="focus-input"></span>
        </div>
        <div class="wrap-input validate-input" data-validate="">
          <span class="label-input">Password</span>
          <input class="input" type="password" name="password" placeholder="Enter your password">
          <span class="focus-input"></span>
        </div>
        <div class="wrap-input input-select">
          <span class="label-input">Preferred Language</span>
          <div>
            <p><select class="selection-2" name="language">
                <% languagesArray.forEach(language => { %>
                <option name="language" value="<%- language.language %>">
                  <%= language.name %>
                  <% }); %>
              </select></p>
          </div>
          <span class="focus-input"></span>
        </div>
        <div class="container-user-form-form-btn">
          <div class="wrap-user-form-form-btn">
            <div class="input-form-bgbtn"></div>
            <button type="submit" class="input-form-btn">
              <span id="important">
                Submit
              </span>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div id="dropDownSelect1"></div>


  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/js/select2.min.js"></script>
  <script src="/scripts/select.js"></script>

</body>
<footer>
    <%- include('../layout/footer') %>
</footer>

</html>
